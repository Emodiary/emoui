/* pages/diaryCon/diarycon.wxss */

.wx-popup {
  display: flex;
  flex-direction: column;
  position: absolute;
  align-items: center;
  justify-content: space-between;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, 0.7);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 40%;
  height:60%;
  width: 60%;
  max-width: 600rpx;
  border: 2rpx solid rgb(95, 163, 172);
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: -webkit-linear-gradient(top,rgb(225,245,250),white,rgb(225,245,250));
}
.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 40rpx;
  border-bottom: 2rpx solid rgb(106, 209, 223);
}
.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
}
.btn-more{
  display: flex;
  position: fixed;
  right:20rpx;
  bottom:20rpx;
  margin-bottom: 5rpx;
}
.btn-more:hover{
  color:rgb(94, 224, 241)
}
.btn-no{
  position: absolute;
  top:73%;
  width:60rpx;
  height:60rpx;
}
.btn-close{
  top:73%;
  width:60rpx;
  height:60rpx;
}
